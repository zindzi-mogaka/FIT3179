{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A dashboard with cross-highlighting.",
 "data": {
    "url": "https://raw.githubusercontent.com/zindzi-mogaka/FIT3179/main/data/world_migration.csv"
  },
  "params": [
    {
      "name": "mig",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 5,
        "name": "mig year"
      }
    }
  ],
  "vconcat": [{
      "projection": {"type": "equalEarth"},
      "layer":[
        
        {
        "width": 900,
        "height": 500,
        "data": {
        "url": "https://raw.githubusercontent.com/zindzi-mogaka/FIT3179/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/zindzi-mogaka/FIT3179/main/data/world_migration.csv"
      },
      "transform": [{"filter": "datum.Year == mig"}],
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "selection": {
        "pts": {"type": "single", "encodings": ["longitude","latitude"]}
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Total",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [500000, 1000000, 5000000, 10000000, 20000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Total", "type": "quantitative", "format": ","},
          {"field": "Year", "type": "quantitative"}
        ]
      }
    }
      ]
    },
     {
      "layer": [{
        "width": 500,
        "height": 500,
        "transform": [{
          "filter": {"selection": "pts"}
        }],
        "title":"Trend in population of migrants from selected country",
        "mark": "line",
        "encoding": {
          "x": {"field": "Year", "type": "ordinal"},
          "y": {"field": "Total", "type": "quantitative"}
        }

      },
      {
        "mark":{
          "type":"text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
      },
        "encoding": {
          "text":{"field":"Country","type":"nominal"},
          "color":{"value":"black"},
          "opacity":{
            "condition":{
              "selection":"pts","value":1
              },"value":0},
          "tooltip":[
            {"field":"Country","type": "nominal"}
          ]
            }
       }

        
      ]
     }
    

  ]
    
}
